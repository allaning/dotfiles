## Set the default editor to vim ##
EDITOR=vim
export $EDITOR

# Dont put duplicate lines in the history
HISTCONTROL=ignoreboth

## use a vi-style line editing interface for bash from default emacs mode ##
set -o vi

alias ..='cd ..'
alias ...='cd ../../../'
alias ....='cd ../../../../'
alias .....='cd ../../../../'
alias cd..='cd ..'

